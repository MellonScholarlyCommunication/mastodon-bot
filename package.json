{
  "name": "mastodon-bot",
  "version": "1.0.4",
  "description": "A Mastodon Bot",
  "main": "index.js",
  "author": "Patrick Hochstenbach <Patrick.Hochstenbach@UGent.be>",
  "license": "MIT",
  "scripts": {
    "fetch-cron": "npx mastodon-cli fetch",
    "fetch": "npx mastodon-cli fetch --streaming",
    "server": "npx ldn-inbox-server start-server",
    "db-start": "docker compose -f compose.yaml up -d",
    "db-stop": "docker compose -f compose.yaml down",
    "db-shell": "docker exec -it db psql -U postgres",
    "handle-accepted": "npx ldn-inbox-server handler ./accepted --config ./config/accepted_config.json5 -hn @handler/notification_handler/multi.js",
    "handle-inbox": "npx ldn-inbox-server handler @inbox -hn @handler/notification_handler/multi.js",
    "handle-outbox": "npx ldn-inbox-server handler @outbox -hn @handler/notification_handler/multi.js",
    "wikijs": "node node_modules/wikijs-cli/bin/wikijs-cli.js",
    "updater": "node node_modules/wikijs-cli/bin/updater-cli.js",
    "clean": "rm inbox/* ; rm accepted/* ; rm error/* ; rm outbox/* ; ./bin/cache_admin.js remove-all",
    "real-clean": "rm .history ; yarn run clean",
    "demo-accepted": "cp data/example_incoming.jsonld accepted",
    "demo-metadata": "./bin/cache_admin.js add data/example_incoming.jsonld data/example_outgoing.jsonld ; cp data/example_metadata.jsonld inbox",
    "demo-metadata-reject": "./bin/cache_admin.js add data/example_incoming.jsonld data/example_outgoing.jsonld ; cp data/example_metadata_reject.jsonld inbox"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "citation-js": "^0.7.15",
    "commander": "^12.1.0",
    "ldn-inbox-server": "^1.6.5",
    "mastodon-cli": "^1.0.8",
    "md5": "^2.3.0",
    "node-fetch": "^2.7.0",
    "postgres": "^3.4.4"
  }
}
